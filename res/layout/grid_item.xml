<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.example.circularimageview.FlipImageView
    android:id="@+id/row_icon"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:contentDescription="@string/app_name"
    android:scaleType="fitCenter"
    app:flipDuration="700"
    app:flipInterpolator="@android:anim/accelerate_interpolator"
    app:flipRotations="y"
    app:reverseRotation="true"/>

    <TextView
        android:id="@+id/grid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#d05728"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/row_icon"
        android:textColor="#d05728"
        android:layout_centerHorizontal="true" 
       />

</RelativeLayout>
